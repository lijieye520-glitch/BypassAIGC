# 数据库配置 (Database Configuration)
DATABASE_URL=sqlite:///./ai_polish.db
# 或使用 PostgreSQL: postgresql://user:password@localhost/ai_polish

# Redis 配置 (Redis Configuration - used for concurrency control)
REDIS_URL=redis://localhost:6379/0

# OpenAI API 配置 (OpenAI API Configuration)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# 第一阶段模型配置 (Stage 1: Paper Polishing Model)
# 推荐使用 gemini-2.5-pro (Recommended: gemini-2.5-pro)
POLISH_MODEL=gemini-2.5-pro
POLISH_API_KEY=your-polish-api-key-here
POLISH_BASE_URL=https://your-proxy-url/v1

# 第二阶段模型配置 (Stage 2: Originality Enhancement Model)
# 推荐使用 gemini-2.5-pro (Recommended: gemini-2.5-pro)
ENHANCE_MODEL=gemini-2.5-pro
ENHANCE_API_KEY=your-enhance-api-key-here
ENHANCE_BASE_URL=https://your-proxy-url/v1

# 感情文章润色模型配置 (Emotional Article Polishing Model)
# 推荐使用 gemini-2.5-pro (Recommended: gemini-2.5-pro)
EMOTION_MODEL=gemini-2.5-pro
EMOTION_API_KEY=your-emotion-api-key-here
EMOTION_BASE_URL=https://your-proxy-url/v1

# 并发配置 (Concurrency Configuration)
MAX_CONCURRENT_USERS=7

# 会话压缩配置 (Session Compression Configuration)
HISTORY_COMPRESSION_THRESHOLD=2000
COMPRESSION_MODEL=gemini-2.5-pro
COMPRESSION_API_KEY=your-compression-api-key-here
COMPRESSION_BASE_URL=https://your-proxy-url/v1

# JWT 密钥配置 (JWT Secret Key Configuration)
# ⚠️ 生产环境必须修改此密钥! (MUST change this in production!)
# 生成强密钥命令: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 管理员账户配置 (Admin Account Configuration)
# ⚠️ 生产环境必须修改默认密码! (MUST change default password in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# 使用限制配置 (Usage Limit Configuration)
DEFAULT_USAGE_LIMIT=1
SEGMENT_SKIP_THRESHOLD=15
